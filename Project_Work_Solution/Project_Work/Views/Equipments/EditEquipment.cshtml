@model Project_Work.Models.Equipment

@{
    ViewBag.Title = "EditEquipment";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Edit Equipment</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.EquipmentId)

        <div class="form-group row row">
            @Html.LabelFor(model => model.Model, htmlAttributes: new { @class = "col-control-label col-2" })
            <div class="col-4">
                @Html.EditorFor(model => model.Model, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Model, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row row ">
            @Html.LabelFor(model => model.PurchaseDate, htmlAttributes: new { @class = "col-control-label col-2" })
            <div class="col-4">
                @Html.EditorFor(model => model.PurchaseDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PurchaseDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row  row">
            @Html.LabelFor(model => model.EquipTypeId, htmlAttributes: new { @class = "col-control-label col-2" })
            <div class="col-4">
                @*@Html.DropDownListFor(model => model.EquipTypeId,new SelectList(ViewBag.EqTypes, "EquipmentTypeId", "TypeName"), new { @class = "form -control" } )*@
                @Html.DropDownListFor(x=> x.EquipTypeId, new SelectList(ViewBag.EqTypes, "EquipmentTypeId", "TypeName",Model.EquipTypeId), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.EquipTypeId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row row">
            <div class="offset-2 col-4">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

