@model Project_Work.Models.Equipment

@{
    ViewBag.Title = "EquipmentDetails";
    var i = 0;
}



<div class="row">
    <div class="col-8 offset-2">
        <h4>Equipment Details</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Model)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Model)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PurchaseDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PurchaseDate)
            </dd>

            <dt>
                Type
            </dt>

            <dd>
                @Html.DisplayFor(model => model.EquipmentType.TypeName)
            </dd>
            <dt>
                Parts
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Parts.Count)
            </dd>
            <dt>
                Part List
            </dt>

            <dd>
                <table class="table  table-striped table-primary">
                    <thead class="thead-light">
                        <tr>
                            <th>Sr. #</th>
                            <th>
                                Part Name
                            </th>
                            <th>
                                Stock
                            </th>


                        </tr>
                    </thead>

                    @foreach (var item in Model.Parts)
                    {
                        <tbody>
                            <tr>
                                <td>
                                    @(++i)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PartName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Stock)
                                </td>


                            </tr>
                        </tbody>
                    }
                </table>
            </dd>
        </dl>
        <p>
            
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
</div>

