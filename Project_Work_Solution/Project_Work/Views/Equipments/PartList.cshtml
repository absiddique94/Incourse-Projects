@model IEnumerable<Project_Work.Models.Part>

@{
    ViewBag.Title = "PartList";
    var i = 0;
}

<h2>Parts stock of @ViewBag.Equipment</h2>


<table class="table  table-striped table-primary">
    <thead class="thead-light">
        <tr>
            <th>Sr. #</th>
            <th>
                @Html.DisplayNameFor(model => model.PartName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            
            <th></th>
        </tr>
    </thead>

@foreach (var item in Model) {
    <tbody>
        <tr>
            <td>
                @(++i)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
           
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PartId }) |
                @Html.ActionLink("Details", "Details", new { id = item.PartId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PartId })
            </td>
        </tr>
    </tbody>
}

</table>
<a class="btn btn-link" href="@Url.Action("Index", "Equipments")">Back to list</a>
