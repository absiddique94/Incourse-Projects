@model M7_Project_Works.Models.team
@{
    /**/

    ViewBag.Title = "Create";
}
@using (Html.BeginForm())
{
    <h2>Add New Team</h2>
    <hr />
    @Html.AntiForgeryToken()
    <div class="form-group row">
        @Html.LabelFor(x => x.teamName, new { @class = "col-control-label col-2 text-right" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.teamName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.teamName, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.Location, new { @class = "col-control-label col-2 text-right" })
        <div class="col-4">
            @Html.EnumDropDownListFor(x => x.Location, "--Select one--", new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Location, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.Contact, new { @class = "col-control-label col-2 text-right" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.Contact, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Contact, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row" id="estabdiv">
        @Html.LabelFor(x => x.Established, new { @class = "col-control-label col-2 text-right" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.Established, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Established, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-3">
            @Html.ActionLink("Back to List", "Index", "Teams")
        </div>
        <div class="col-3">

            <button type="submit" class="btn btn-outline-primary"><i class="fa fa-save"></i> Save</button>
        </div>
    </div>
}

@section styles{
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker.standalone.css" rel="stylesheet" />

}
@section scripts{
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script>
        $(document).ready(() => {
            $("#estabdiv input").datepicker(
                {
                    format: "yyyy-mm-dd"
                }
            );
        })
    </script>
}
