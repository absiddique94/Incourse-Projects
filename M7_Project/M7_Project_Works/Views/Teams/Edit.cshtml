@model M7_Project_Works.Models.team
@{
    /**/

    ViewBag.Title = "Edit";
}
@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.teamId)
    <h2>Edit Team</h2>
    <hr />
    @Html.AntiForgeryToken()
    <div class="form-group row">
        @Html.LabelFor(x => x.teamName, new { @class = "col-control-label col-2" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.teamName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.teamName, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.Location, new { @class = "col-control-label col-2" })
        <div class="col-4">
            @Html.EnumDropDownListFor(x => x.Location, "--Select one--", new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Location, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.Contact, new { @class = "col-control-label col-2" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.Contact, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Contact, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row" id="estabdiv">
        @Html.LabelFor(x => x.Established, new { @class = "col-control-label col-2" })
        <div class="col-4">
            @Html.EditorFor(x => x.Established, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Established, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-3 offset-2">
            <button type="submit" class="btn btn-outline-primary"><i class="fa fa-save"></i></button>
            <button type="reset" class="btn btn-outline-secondary"><i class="fa fa-refresh"></i></button>
        </div>
    </div>
}
<a href="@Url.Action("Index", "Teams")"><i class="fa fa-long-arrow-left"></i> Back to list</a>


@section scripts{
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script>
        $(document).ready(() => {
            $("#estabdiv input").datepicker(
                {
                    format: "yyyy-mm-dd"
                }
            );
        })
    </script>
}
@section styles
{
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
}



