@model M7_Project_Works.Models.Player
@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    <h2>Add New Player</h2>
    <hr />
    <div class="form-group row">
        @Html.LabelFor(x => x.PlayerName, new { @class = "col-control-label col-2 text-right" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.PlayerName, new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(x => x.PlayerName, null, new { @class = "text-danger" })
        </div>
    </div>  
    <div class="form-group row">
        @Html.LabelFor(x => x.BasicSalary, new { @class = "col-control-label col-2 text-right" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.BasicSalary, new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(x => x.BasicSalary, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.teamId, new { @class = "col-control-label col-2 text-right" })
        <div class="col-4">
            @Html.DropDownListFor(x => x.teamId,
            new SelectList(ViewBag.Teams as IEnumerable<M7_Project_Works.Models.team>, "TeamId", "TeamName"),
             "--Select one--", new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(x => x.teamId, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-5 offset-3">
            <input type="reset" value="save" class="btn btn-outline-secondary" />
            <input type="submit" value="save" class="btn btn-outline-primary" />
            <span class="fa fa-spinner fa-pulse fa-3x" id="spin" style="Display:none"></span>
        </div>
    </div>
}

@section styles{

    <link href="~/Content/font-awesome.css" rel="stylesheet" />
}

@section scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script>
        $(document)
            .ajaxStart(() => { $("#spin").show(); })
            .ajaxStop(() => { $("#spin").hide(); })
    </script>
}




