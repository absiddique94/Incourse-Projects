@model M7_Project_Works.ViewModel.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
@using (Html.BeginForm())
{
    <h3>Register</h3>
    <hr />
    <div class="form-group row">
        @Html.LabelFor(x => x.Username, new { @class = "col-form-label col-2" })
        <div class="col-5">
            @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Username, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.Password, new { @class = "col-form-label col-2" })
        <div class="col-5">
            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Password, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.ConfirmPassword, new { @class = "col-form-label col-2" })
        <div class="col-5">
            @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.ConfirmPassword, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-5 offset-3">
            <button type="submit" class="btn btn-outline-primary btn-sm">Register</button>
            <button type="reset" class="btn btn-outline-secondary btn-sm">Reset</button>
        </div>
    </div>
}

@section scripts {

    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}


